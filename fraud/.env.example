# Environment Configuration - Fraud Detection Project
# Copy this to .env and update with your values
# NEVER commit .env file to git

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fraud_db
DB_USER=fraud_user
DB_PASSWORD=your_secure_password_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=fraud/models/fraud_model.pkl
FRAUD_THRESHOLD=0.7

# API Settings
API_PORT=8001
API_HOST=0.0.0.0

# Dashboard Settings
STREAMLIT_SERVER_PORT=8502
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Alert Configuration
ALERT_EMAIL=fraud-alerts@yourcompany.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=
EMAIL_PASSWORD=

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9091
