# Environment Configuration - Healthcare Analytics
# Copy this to .env and update with your values
# NEVER commit .env file to git

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_db
DB_USER=healthcare_user
DB_PASSWORD=your_secure_password_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=healthcare/models/readmission_model.pkl

# API Settings
API_PORT=8004
API_HOST=0.0.0.0

# Dashboard Settings
STREAMLIT_SERVER_PORT=8505
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# HIPAA Compliance
ENCRYPT_PHI=true
AUDIT_LOGGING=true

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9094
