# Environment Configuration - Restaurant Analytics
# Copy this to .env and update with your values
# NEVER commit .env file to git

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_db
DB_USER=restaurant_user
DB_PASSWORD=your_secure_password_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=restaurant/models/sentiment_model.pkl
VECTORIZER_PATH=restaurant/models/vectorizer.pkl

# API Settings
API_PORT=8006
API_HOST=0.0.0.0

# Dashboard Settings
STREAMLIT_SERVER_PORT=8507
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# NLP Configuration
NLTK_DATA_PATH=./nltk_data

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9096
