# Environment Configuration - Financial Analytics
# Copy this to .env and update with your values
# NEVER commit .env file to git

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financial_db
DB_USER=financial_user
DB_PASSWORD=your_secure_password_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=financial/models/lstm_model.h5
SCALER_PATH=financial/models/scaler.pkl

# API Settings
API_PORT=8003
API_HOST=0.0.0.0

# Email Reporting (for automated_reporting.py)
SENDER_EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Dashboard Settings
STREAMLIT_SERVER_PORT=8504
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Yahoo Finance API
YFINANCE_CACHE_DIR=./cache

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9093
