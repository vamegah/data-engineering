
FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy project files
# Create directories first
RUN mkdir -p ./shared ./data/raw ./data/processed ./models ./logs

# Copy project files
COPY financial/ ./financial/
COPY shared/ ./shared/

# Expose port for API
EXPOSE 8003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "import requests; requests.get('http://localhost:8003/health')"

# Run API
CMD ["uvicorn", "financial.api.app:app", "--host", "0.0.0.0", "--port", "8003"]